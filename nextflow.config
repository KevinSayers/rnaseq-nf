manifest {
  description = 'Proof of concept of a RNA-seq pipeline implemented with Nextflow' 
  author = 'Paolo Di Tommaso'
}

/*  
 * default container 
 */
process.container = 'nextflow/rnaseq-nf' 


/* 
 * defines execution profiles for different environments  
 */ 

profiles {
  alpha{
  k8s.context='alpha'
  }
  beta{
  k8s.context='beta'
  }
}
